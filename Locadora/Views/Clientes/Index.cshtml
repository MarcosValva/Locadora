@model IEnumerable<Locadora.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1 class="text-white text-center mb-4">Lista de Clientes</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body bg-dark text-white" style="border: none; box-shadow: none;">
            <div class="d-flex justify-content-between mb-4">
                <p>
                    <a asp-action="Create" class="btn btn-success btn-lg">Adicionar Cliente</a>
                </p>
            </div>

            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th class="text-white">Nome</th>
                        <th class="text-white">Email</th>
                        <th class="text-white">Telefone</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-white">@Html.DisplayFor(modelItem => item.Nome)</td>
                            <td class="text-white">@Html.DisplayFor(modelItem => item.Email)</td>
                            <td class="text-white">@Html.DisplayFor(modelItem => item.Telefone)</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning btn-sm ms-3">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-info btn-sm ms-3">Detalhes</a>
                                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger btn-sm ms-3">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
