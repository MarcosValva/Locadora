@model IEnumerable<Locadora.Models.Filme>

@{
    ViewData["Title"] = "Filmes";
}

<h1 class="text-white text-center mb-4">Lista de Filmes</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body bg-dark">
            <div class="d-flex justify-content-between">
                <p>
                    <a asp-action="Create" class="btn btn-success btn-lg">Adicionar Filme</a>
                </p>
            </div>

            <table class="table table-dark table-striped">
                <thead>
                    <tr>
                        <th class="text-white">Título</th>
                        <th class="text-white">Gênero</th>
                        <th class="text-white text-center">Ano de Lançamento</th> <!-- Centralizado -->
                        <th class="text-white text-center">Preço</th>
                        <th class="text-white text-center">Diretor</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-white">@Html.DisplayFor(modelItem => item.Titulo)</td>
                            <td class="text-white">@Html.DisplayFor(modelItem => item.Genero)</td>
                            <td class="text-white text-center">@Html.DisplayFor(modelItem => item.AnoLancamento)</td> <!-- Centralizado -->
                            <td class="text-white text-center">@Html.DisplayFor(modelItem => item.Preco)</td>
                            <td class="text-white text-center">@Html.DisplayFor(modelItem => item.Diretor.Name)</td>
                            <td>
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.FilmeId" class="btn btn-warning btn-sm ms-3">Editar</a>
                                    <a asp-action="Details" asp-route-id="@item.FilmeId" class="btn btn-info btn-sm ms-3">Detalhes</a>
                                    <a asp-action="Delete" asp-route-id="@item.FilmeId" class="btn btn-danger btn-sm ms-3">Excluir</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
