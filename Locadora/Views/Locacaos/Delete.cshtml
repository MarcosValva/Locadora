@model Locadora.Models.Locacao

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-white text-center mb-4">Excluir Locação</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body bg-dark text-white">
            <h4 class="text-white">Confirmação de Exclusão</h4>
            <hr class="border-light" />

            <h5>Tem certeza de que deseja excluir esta locação?</h5>

            <dl class="row">
                <dt class="col-sm-2 text-white">
                    @Html.DisplayNameFor(model => model.DataLocacao)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.DataLocacao)
                </dd>
                <dt class="col-sm-2 text-white">
                    @Html.DisplayNameFor(model => model.DataDevolucao)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.DataDevolucao)
                </dd>
                <dt class="col-sm-2 text-white">
                    @Html.DisplayNameFor(model => model.Cliente)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.Cliente.Email)
                </dd>
                <dt class="col-sm-2 text-white">
                    @Html.DisplayNameFor(model => model.Filme)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.Filme.Genero)
                </dd>
            </dl>

            <!-- Botões Excluir e Voltar -->
            <div class="d-flex justify-content-between mt-4">
                <!-- Botão Excluir -->
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="LocacaoId" />
                    <input type="submit" value="Excluir" class="btn btn-danger btn-sm w-48" />
                </form>

                <!-- Botão Voltar -->
                <a asp-action="Index" class="btn btn-secondary btn-sm w-48">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
