@model Locadora.Models.Locacao

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="text-white text-center mb-4">Detalhes da Locação</h1>

<div class="container">
    <div class="card shadow-sm">
        <div class="card-body bg-dark text-white">
            <h4 class="text-white">Informações da Locação</h4>
            <hr class="border-light" />

            <dl class="row">
                <dt class="col-sm-2 text-white">
                    @Html.DisplayNameFor(model => model.DataLocacao)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.DataLocacao)
                </dd>

                <dt class="col-sm-2 text-white">
                    @Html.DisplayNameFor(model => model.DataDevolucao)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.DataDevolucao)
                </dd>

                <dt class="col-sm-2 text-white">
                    @Html.DisplayNameFor(model => model.Cliente)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.Cliente.Email)
                </dd>

                <dt class="col-sm-2 text-white">
                    @Html.DisplayNameFor(model => model.Filme)
                </dt>
                <dd class="col-sm-10 text-white">
                    @Html.DisplayFor(model => model.Filme.Genero)
                </dd>
            </dl>

            <!-- Botões Editar e Voltar -->
            <div class="d-flex justify-content-between mt-4">
                <!-- Botão Editar -->
                <a asp-action="Edit" asp-route-id="@Model?.LocacaoId" class="btn btn-warning btn-sm w-48">Editar</a>

                <!-- Botão Voltar -->
                <a asp-action="Index" class="btn btn-secondary btn-sm w-48">Voltar para a Lista</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
